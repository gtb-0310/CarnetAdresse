<?xml version="1.0" encoding="utf-8" ?>

    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarnetAdresseXamarin.Views.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Command="{Binding DeleteItemCommand}" />
        <ToolbarItem Text="Update" Command="{Binding UpdateItemCommand}" />
    </ContentPage.ToolbarItems>

    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nom:" FontSize="Medium" />
        <Label Text="{Binding LastName}" FontSize="Small"/>
        <Label Text="Prénom:" FontSize="Medium" />
        <Label Text="{Binding FirstName}" FontSize="Small"/>
        <Label Text="Mail:" FontSize="Medium" />
        <Label Text="{Binding Mail}" FontSize="Small"/>
        <Label Text="Numéro de téléphone:" FontSize="Medium" />
        <Label Text="{Binding PhoneNumber}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>
